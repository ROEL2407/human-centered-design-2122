<!DOCTYPE html>
<html lang="en">

<%- include("./components/head.ejs") -%>

<body>
    <header>

    </header>
    <main>
        <form action="">
            <fieldset>
                <label for="stationVan">Vul een station in waar u vanaf vertrekt:</label>
                <select name="stationVan" id="stationVan">
                    <option value="thuis">thuis</option>
                    <option value="werk">werk</option>
                </select>
                <label for="stationNaar">Vul een station in waar u aankomt:</label>
                <select name="stationNaar" id="stationNaar">
                    <option value="thuis">thuis</option>
                    <option value="werk">werk</option>
                </select>
            </fieldset>
            <fieldset>
                <p>Kies een datum waarop u weg wilt:</p>
                <% data.forEach(function(item){ %>
                    <button type="button"><%- item -%></button>
                <% }) %>
            </fieldset>
            <fieldset>
                <label for="appt">Welke tijd vertrekt u?</label>
                <input type="time" id="appt" name="appt">
            </fieldset>

            <input type="submit" value="Afronden">
        </form>
    </main>
    <footer>

    </footer>
</body>

</html>